<odoo>
    <!-- Herencia de la vista de cotizaciones -->
    <record id="view_quotation_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.quotation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="temperature_status" widget="badge"
                       options="{'class': 'badge-danger'}"/>
            </xpath>
        </field>
    </record>

    <!-- Herencia de la vista de Ã³rdenes confirmadas -->
    <record id="view_order_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="temperature_status" widget="badge"
                       options="{'class': 'badge-danger'}"/>
            </xpath>
        </field>
    </record>
</odoo>
